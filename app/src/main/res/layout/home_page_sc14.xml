<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbarover">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logohome"
                    android:textColor="#fff"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="45dp"
                    />

                <ImageView
                    android:padding="5dp"
                android:id="@+id/ivclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homesetting"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:paddingRight="15dp"
                    android:id="@+id/ivfilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu"
                    android:layout_gravity="right|center_vertical"/>

           </FrameLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


<RelativeLayout
    android:layout_below="@id/appbarover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemContainer"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutItem"
            android:orientation="vertical"
            android:weightSum="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tvItemCaption"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Please help"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imgItemImage"
                android:layout_weight="5"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="200dp"
        android:text="GET STUFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/btngetstuffhome"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@color/coloremail"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:text="DONATE STUFF"
        android:id="@+id/btndonatehome"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@color/coloremail"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:layout_marginBottom="20dp"
        android:drawableRight="@drawable/camera"
        />

</RelativeLayout>

</RelativeLayout>