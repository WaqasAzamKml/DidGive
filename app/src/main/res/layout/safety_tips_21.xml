<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/ivcros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crossdul"
        android:padding="15dp"
        android:layout_alignParentRight="true"/>
    
    
    <TextView
        android:id="@+id/tvsafety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAFETY TIPS"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:drawableRight="@drawable/whitearrow"
        android:background="@color/coloremail"
        android:layout_below="@id/ivcros"
        />

    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/tvblock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLOCK USER"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:drawableRight="@drawable/whitearrow"
        android:background="@color/coloremail"
        android:layout_below="@id/tvsafety"
        />

    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/tvdel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE CHAT"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:drawableRight="@drawable/whitearrow"
        android:background="@color/coloremail"
        android:layout_below="@id/tvblock"
        />


    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/tvreport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REPORT USER"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:drawableRight="@drawable/whitearrow"
        android:background="@color/coloremail"
        android:layout_below="@id/tvdel"
        />



</RelativeLayout>